<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" style="-fx-background-color: #e0e8f0;" stylesheets="@style/siswa-styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bdsqltester.scenes.NilaiSiswaController">
    <children>
        <AnchorPane layoutX="25.0" layoutY="25.0" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <children>
                <Label fx:id="judulLabel" layoutX="25.0" layoutY="25.0" text="Daftar Nilai Ujian">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <TableView fx:id="nilaiTable" layoutX="25.0" layoutY="80.0" prefHeight="350.0" prefWidth="550.0" styleClass="custom-table">
                    <columns>
                        <TableColumn fx:id="mapelColumn" prefWidth="150.0" text="Mata Pelajaran" />
                        <TableColumn fx:id="tipeColumn" prefWidth="100.0" text="Tipe Ujian" />
                        <TableColumn fx:id="nilaiColumn" prefWidth="50.0" text="Nilai" />
                        <TableColumn fx:id="tanggalColumn" prefWidth="130.0" text="Tanggal Input" />
                        <TableColumn fx:id="guruColumn" prefWidth="120.0" text="Guru" />
                    </columns>
                </TableView>
                <Button fx:id="backButton" layoutX="500.0" layoutY="450.0" mnemonicParsing="false" onAction="#onBackClick" prefWidth="75.0" styleClass="menu-button-light" text="Back" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="25.0" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>