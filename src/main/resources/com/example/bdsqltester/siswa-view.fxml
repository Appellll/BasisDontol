<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="15.0" stylesheets="@style/guru-styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bdsqltester.scenes.siswa.SiswaController">
    <children>
        <Label fx:id="namaSiswaLabel" text="Selamat Datang, Siswa!">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onLihatBiodataClick" prefHeight="50.0" prefWidth="250.0" styleClass="modern-button" text="Lihat Biodata" />
                <Button mnemonicParsing="false" onAction="#onLihatSppClick" prefHeight="50.0" prefWidth="250.0" styleClass="modern-button" text="Status SPP" />
                <Button mnemonicParsing="false" onAction="#onLihatJadwalClick" prefHeight="50.0" prefWidth="250.0" styleClass="modern-button" text="Jadwal Pelajaran" />
                <Button mnemonicParsing="false" onAction="#onLihatNilaiClick" prefHeight="50.0" prefWidth="250.0" styleClass="modern-button" text="Lihat Nilai" />
                <Button mnemonicParsing="false" onAction="#onLihatRaporClick" prefHeight="50.0" prefWidth="250.0" styleClass="modern-button" text="Lihat Rapor" />
                <Button mnemonicParsing="false" onAction="#onLogoutClick" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>